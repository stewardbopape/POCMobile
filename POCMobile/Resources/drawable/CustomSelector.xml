<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
  <item android:state_pressed="true" >
    <shape>
      <gradient
       android:startColor="#2F2CD3"
         android:endColor="#2F2CD3"
         android:angle="270" />
    </shape>
  </item>
  <item android:state_activated="true" android:drawable="@color/row_background" />
  <item android:state_selected="true"
    android:state_pressed="false"
    android:drawable="@color/row_background" />
  <item android:state_activated="false" android:state_selected="false" android:drawable="@color/StatsWhite" />
</selector>